{
  "name": "@seclaw/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 execute seclaw --file=src/db/schema.sql",
    "db:migrate:local": "wrangler d1 execute seclaw --local --file=src/db/schema.sql",
    "db:seed": "wrangler d1 execute seclaw --file=src/db/seed.sql",
    "db:seed:local": "wrangler d1 execute seclaw --local --file=src/db/seed.sql"
  },
  "dependencies": {
    "hono": "^4.7.0",
    "nanoid": "^5.0.0",
    "stripe": "^17.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "typescript": "^5.7.0",
    "wrangler": "^3.100.0"
  }
}
