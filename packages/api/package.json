{
  "name": "@seclaw/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "cp ../web/public/static/client.js public/static/client.js && cp ../web/public/static/output.css public/static/output.css",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 execute seclaw --file=src/db/schema.sql",
    "db:migrate:local": "wrangler d1 execute seclaw --local --file=src/db/schema.sql",
    "db:seed": "wrangler d1 execute seclaw --file=src/db/seed.sql",
    "db:seed:local": "wrangler d1 execute seclaw --local --file=src/db/seed.sql",
    "db:seed:dev": "wrangler d1 execute seclaw --local --file=src/db/seed-dev.sql"
  },
  "dependencies": {
    "better-auth": "^1.4.18",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.7.0",
    "nanoid": "^5.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "resend": "^6.9.2",
    "stripe": "^17.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "typescript": "^5.7.0",
    "wrangler": "^3.100.0"
  }
}
