{
  "name": "@seclaw/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build:client": "esbuild src/client.tsx --bundle --minify --outfile=public/static/client.js --jsx=automatic --target=es2020 --format=esm",
    "build": "pnpm build:client && wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "css": "tailwindcss -i ./src/styles/globals.css -o ./public/static/output.css --watch",
    "css:build": "tailwindcss -i ./src/styles/globals.css -o ./public/static/output.css --minify"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@tanstack/react-query": "^5.90.21",
    "better-auth": "^1.4.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.7.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@tailwindcss/cli": "^4.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "esbuild": "^0.27.3",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "wrangler": "^3.100.0"
  }
}
